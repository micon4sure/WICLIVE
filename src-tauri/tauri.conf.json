{
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "WIC LIVE",
    "version": "3.0.0-beta.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "path": {
        "all": true
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": false,
        "message": false,
        "open": true,
        "save": false
      }
    },
    "windows": [
      {
        "title": "WIC LIVE",
        "width": 1024,
        "height": 768
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": [
        "nsis",
        "updater"
      ],
      "identifier": "wiclive.techtile.media",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "windows": {
        "nsis": {
          "license": "LICENSE"
        }
      },
      "resources": [
        "../automation/*",
        "../dlls/*"
      ]
    },
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVEN0UwOTY0NUJCMTM0N0YKUldSL05MRmJaQWwrWFhOWUErQTdnMUc1NDV3QlhoTGM5K1hIbmxiMXRKMFlheWVoQ05BeHN6aGEK",
      "windows": {
        "installMode": "passive",
        "installerArgs": []
      },
      "endpoints": [
        "https://github.com/micon4sure/WICLIVE/releases/latest/download/version.json"
      ]
    }
  }
}